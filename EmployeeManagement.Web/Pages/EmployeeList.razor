@page "/"

@inherits EmployeeListBase


<PageTitle>EmployeeList</PageTitle>
<div>
<b>
<input type="checkbox" @bind = "ShowFooter" />
</b> Show Footer
</div>

<h3>Employee List</h3>
@if(employees == null)
{
    <div class="spinner-border uspinner text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else
{
<div class="card-deck">
    <div class="row">
    @foreach(var employee in employees)
            {
                <DisplayEmployee Employee="employee" ShowFooter="ShowFooter">
                </DisplayEmployee>
            }
        </div>
</div>
}
