@page "/editemployee"
@inherits EditEmployeeBase

<EditForm Model=@EditEmployeeModel OnValidSubmit="HandleValidSubmit">
    <ObjectGraphDataAnnotationsValidator />
    <h3>@PageHeaderText</h3>
    <hr />
    <ValidationSummary />
    <div class="form-group row">
        <label for="firstName" class="col-sm-10 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstname" class="form-control" placeholder="First Name" @bind-Value="EditEmployeeModel.FirstName"></InputText>
            <ValidationMessage For="@(() => EditEmployeeModel.FirstName)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="lastname" class="col-sm-10 col-form-label">
            Last Name
        </label>
        <div class="col-sm-10">
            <InputText id="lastname" class="form-control" placeholder="Last Name" @bind-Value="EditEmployeeModel.LastName"></InputText>
            <ValidationMessage For="@(() => EditEmployeeModel.LastName)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="email" class="col-sm-10 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email" @bind-Value="EditEmployeeModel.Email"></InputText>
            <ValidationMessage For="@(() => EditEmployeeModel.Email)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="confirmemail" class="col-sm-10 col-form-label">
            Confirm Email
        </label>
        <div class="col-sm-10">
            <InputText id="confirmemail" class="form-control" placeholder="ConfirmEmail" @bind-Value="EditEmployeeModel.ConfirmEmail"></InputText>
            <ValidationMessage For="@(() => EditEmployeeModel.ConfirmEmail)" />
        </div>
    </div>


    <div class="form-group row">
        <label for="department" class="col-sm-10 col-form-label">
            Department
        </label>
        <div class="col-sm-10">
            <InputSelect id="department" class="form-control" @bind-Value="EditEmployeeModel.DepartmentId">
                @foreach (var dept in Departments)
                {
                    <option value="@dept.DepartmentName">@dept.DepartmentName</option>
                }

            </InputSelect>
        </div>
    </div>

    <div class="form-group row">
        <label for="gender" class="col-sm-10 col-form-label">
            Gender
        </label>
        <div class="col-sm-10">
            <InputSelect id="gender" class="form-control" @bind-Value="Employee.Gender">
                @foreach (var gender in Enum.GetValues(typeof(Gender)))
                {
                    <option value="@gender">@gender</option>
                }
            </InputSelect>
        </div>
    </div>

    
@*    <div class="form-group row">
        <label for="departmentName" class="col-sm-10 col-form-label">
            Department Name
        </label>
        <div class="col-sm-10">
            <InputText id="departmentName" class="form-control" placeholder="departmentName" @bind-Value="EditEmployeeModel.Department.DepartmentName"></InputText>
            <ValidationMessage For="@(() => EditEmployeeModel.Department.DepartmentName)" />
        </div>
    </div>*@

    <div class="form-group row">
        <label for="date" class="col-sm-10 col-form-label">
            Date
        </label>
        <div class="col-sm-10">
            <InputDate id="date" class="form-control" @bind-Value="EditEmployeeModel.DateOfBitrh"></InputDate>
        </div>
    </div>
     <button class="btn btn-primary" type="submit">Submit</button>
    @if(EditEmployeeModel.EmployeeId > 0)
	{
		<button class="btn btn-danger" type="button" @onclick="Delete_Click"> Delete </button>
	}

</EditForm>


