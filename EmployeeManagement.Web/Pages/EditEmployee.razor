@page "/editemployee/{id}"
@inherits EditEmployeeBase

<EditForm Model=@Employee>
    <h3>Edit Employee</h3>
    <hr />
    <div class="form-group row">
        <label for="firstName" class="col-sm-10 col-form-label">
            First Name
        </label>
        <div class="col-sm-10">
            <InputText id="firstname" class="form-control" placeholder="First Name" @bind-Value="Employee.FirstName"></InputText>
        </div>
    </div>

    <div class="form-group row">
        <label for="lastname" class="col-sm-10 col-form-label">
            Last Name
        </label>
        <div class="col-sm-10">
            <InputText id="lastname" class="form-control" placeholder="Last Name" @bind-Value="Employee.LastName"></InputText>
        </div>
    </div>

    <div class="form-group row">
        <label for="email" class="col-sm-10 col-form-label">
            Email
        </label>
        <div class="col-sm-10">
            <InputText id="email" class="form-control" placeholder="Email" @bind-Value="Employee.Email"></InputText>
        </div>
    </div>

    <div class="form-group row">
        <label for="department" class="col-sm-10 col-form-label">
            Department
        </label>
        <div class="col-sm-10">
            <InputSelect id="department" class="form-control" @bind-Value="Employee.DepartmentId">
                @foreach (var dept in Departments)
                {
                    <option value="@dept.DepartmentName">@dept.DepartmentName</option>
                }

            </InputSelect>
        </div>
    </div>

    <div class="form-group row">
        <label for="gender" class="col-sm-10 col-form-label">
            Gender
        </label>
        <div class="col-sm-10">
            <InputSelect id="gender" class="form-control" @bind-Value="Employee.Gender">
                @foreach (var gender in Enum.GetValues(typeof(Gender)))
                {
                    <option value="@gender">@gender</option>
                }
            </InputSelect>
        </div>
    </div>

    <div class="form-group row">
        <label for="date" class="col-sm-10 col-form-label">
            Date
        </label>
        <div class="col-sm-10">
            <InputDate id="date" class="form-control" @bind-Value="Employee.DateOfBitrh"></InputDate>
        </div>
    </div>



</EditForm>


